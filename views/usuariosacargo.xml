<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!-- Usuarios para Jefes -->
    <record model="ir.ui.view" id="listado_uno">
      <field name="name">listado.uno</field>
      <field name="model">aha.usuario</field>
      <field name="arch" type="xml">
        <tree create="0" edit="0" delete="0">
          <field name="name"/>
          <field name="login"/>
          <field name="password"/>
          <field name="area_id"/>
          <button name="calcular_calificacion" string="Calcular calificacion" type="object" context="{'u':login}"/>
        </tree>
      </field>
    </record>

